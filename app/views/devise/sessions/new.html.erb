<div class="w-100 d-flex flex-column align-items-center py-2">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control field-width', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, :class => "mt-2" %><br />
    <%= f.password_field :password, class: 'form-control field-width', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , :class => "btn btn-secondary"%>
    <p class="pt-2">Already have an account? </p>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>
